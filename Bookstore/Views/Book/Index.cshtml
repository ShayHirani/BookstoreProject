@model List<Bookstore.Models.Book>

<h1>List of Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>Book Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookName</td>
                <td><a asp-action="Details" asp-route-id="@book.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
